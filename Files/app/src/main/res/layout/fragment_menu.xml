<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    >

    <Button
        android:id="@+id/assetsFilesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/assets_files"
        />

    <Button
        android:id="@+id/internalStorageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assetsFilesButton"
        android:layout_marginTop="8dp"
        android:text="@string/internal_storage"
        />

    <Button
        android:id="@+id/externalStorageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/internalStorageButton"
        android:layout_marginTop="8dp"
        android:text="External storage"
        />

    <Button
        android:id="@+id/sharedPrefsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/externalStorageButton"
        android:layout_marginTop="8dp"
        android:text="@string/shared_preferences"
        />

    <Button
        android:id="@+id/dataStoreButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sharedPrefsButton"
        android:layout_marginTop="8dp"
        android:text="@string/data_store"

        />


</androidx.constraintlayout.widget.ConstraintLayout>