<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        />

    <Button
        android:id="@+id/replaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Replace"
        />
    <CheckBox
        android:id="@+id/addToBackstackCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to backstack"
        />
    <EditText
        android:id="@+id/stateNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input state name"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/popButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop backstack"
        />

    <FrameLayout
        android:id="@+id/popContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>